<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mercy.markus.tourkadunacity">

    <application
        android:allowBackup="true"
        android:icon="@drawable/croc"
        android:label="@string/app_name"
        android:roundIcon="@drawable/croc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Arts_CultureActivity"
            android:label="@string/arts_culture" />
        <activity
            android:name=".FoodActivity"
            android:label="@string/food" />
        <activity
            android:name=".MusicActivity"
            android:label="@string/music" />
        <activity
            android:name=".Night_LifeActivity"
            android:label="@string/nightlife" />
        <activity
            android:name=".SportsActivity"
            android:label="@string/sports" />
    </application>

</manifest>